{
  "family": "fullstack-app-task",
  "networkMode": "bridge",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "${frontend_image_uri}",
      "cpu": 128,
      "memory": 256,
      "portMappings": [{ "containerPort": 80, "hostPort": 80 }],
      "essential": true
    },
    {
      "name": "backend",
      "image": "${backend_image_uri}",
      "cpu": 128,
      "memory": 256,
      "essential": true,
      "secrets": [
        { "name": "PROD_DB_URL", "valueFrom": "postgresql://<DB_USER>:<DB_PASSWORD>@${DB_HOST}:${DB_PORT}/${DB_NAME}" },
        { "name": "DB_HOST", "valueFrom": "${secret_arn_prefix}:host::" },
        { "name": "DB_USER", "valueFrom": "${secret_arn_prefix}:username::" },
        { "name": "DB_PASSWORD", "valueFrom": "${secret_arn_prefix}:password::" },
        { "name": "DB_NAME", "valueFrom": "${secret_arn_prefix}:dbname::" }
      ],
      "environment": [
        { "name": "PORT", "value": "3000" },
        { "name": "NODE_ENV", "value": "production" },
        { "name": "AUTH_JWT_SECRET", "value": "${{ secrets.AUTH_JWT_SECRET }}" },
        { "name": "INV_JWT_SECRET", "value": "${{ secrets.INV_JWT_SECRET }}" },
        { "name": "REMEMBER_TOKEN", "value": "${{ secrets.REMEMBER_TOKEN }}" },
        { "name": "SESSION_SECRET", "value": "${{ secrets.SESSION_SECRET }}" }
      ]
    }
  ]
}
