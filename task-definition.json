{
  "family": "fullstack-app-task",
  "networkMode": "bridge",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "${frontend_image_uri}",
      "cpu": 128,
      "memory": 256,
      "portMappings": [{ "containerPort": 80, "hostPort": 80 }],
      "essential": true
    },
    {
      "name": "backend",
      "image": "${backend_image_uri}",
      "cpu": 128,
      "memory": 256,
      "portMappings": [{ "containerPort": 3000, "hostPort": 3000 }],
      "essential": true,
      "secrets": [
        { "name": "PROD_DB_URL", "valueFrom": "${secret_arn_prefix}:connection_string" },
        { "name": "DB_HOST", "valueFrom": "${secret_arn_prefix}:host" },
        { "name": "DB_USER", "valueFrom": "${secret_arn_prefix}:username" },
        { "name": "DB_PASSWORD", "valueFrom": "${secret_arn_prefix}:password" },
        { "name": "DB_NAME", "valueFrom": "${secret_arn_prefix}:dbname" },
        { "name": "AUTH_JWT_SECRET", "valueFrom": "${jwt_secret_arn_prefix}:auth_jwt_secret" },
        { "name": "INV_JWT_SECRET", "valueFrom": "${jwt_secret_arn_prefix}:inv_jwt_secret" },
        { "name": "REMEMBER_TOKEN", "valueFrom": "${jwt_secret_arn_prefix}:remember_token" },
        { "name": "SESSION_SECRET", "valueFrom": "${jwt_secret_arn_prefix}:session_secret" },
        { "name": "LOCAL_FRONTEND_URL", "valueFrom": "${jwt_secret_arn_prefix}:local_frontend_url" },
        { "name": "LOCAL_BACKEND_URL", "valueFrom": "${jwt_secret_arn_prefix}:local_backend_url" },
        { "name": "AWS_FRONTEND_URL", "valueFrom": "${jwt_secret_arn_prefix}:aws_frontend_url" }
      ],
      "environment": [
        { "name": "PORT", "value": "3000" },
        { "name": "NODE_ENV", "value": "production" }
      ]
    }
  ]
}
