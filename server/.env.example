# Server Configuration
PORT=3000

# Database URLs
# Production database connection string
PROD_DB_URL=postgresql://username:password@host:port/database?sslmode=require

# Simulation/Development database connection string
SIM_DB_URL=postgresql://username:password@host:port/database

# Security Secrets
# Session secret for session management (minimum 32 characters)
SESSION_SECRET=your_super_secure_session_secret_at_least_32_chars_long

# JWT secret for authentication tokens (minimum 32 characters)
AUTH_JWT_SECRET=your_super_secure_auth_jwt_secret_at_least_32_chars_long

# JWT secret for invitation tokens (minimum 32 characters)
INV_JWT_SECRET=your_super_secure_inv_jwt_secret_at_least_32_chars_long

# Remember token identifier
REMEMBER_TOKEN=rmb-token

# Application URLs
# Local frontend URL for development
LOCAL_FRONTEND_URL=http://localhost:5173

# Local backend URL for development
LOCAL_BACKEND_URL=http://localhost:3000

# AWS frontend URL for production
AWS_FRONTEND_URL=http://your-aws-frontend-url